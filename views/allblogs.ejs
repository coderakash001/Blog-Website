<%- include("./partials/header") %>
<%- include("./partials/nav") %>
<div class="posts w-full min-h-screen bg-white py-4 flex flex-col gap-10 flex-wrap justify-center items-center">
    <% allPosts.forEach((post,i)=>{%>
    <div
      class="posts w-3/4 h-55 bg-white rounded-lg p-3  flex  justify-between  border border-black"
    >
      <section class=" w-1/3 h-full rounded mr-4">
        <img src="<%=post.image%>" alt="" class="object-cover w-full h-48 rounded-lg " />
      </section>
      <section class="flex w-2/3 flex-col justify-between overflow-hidden">
        <p class="overflow-auto"><%=post.description%>.....</p>
        <a href="/exploreBlog/<%=post._id%>"><button class="px-4 py-1 bg-white border border-black rounded-md">explore more </button></a>
      </section>
      </div>

    <%})%>
  </div>
</div>
<%- include("./partials/footer") %>