<%- include('./partials/header') %> 

<%- include('./partials/nav') %>

<div
  class="createuser w-full bg-white flex flex-col justify-center items-center p-3"
>
  <div
    class="profile-image w-4/5 h-80 p-5 bg-black mt-5 flex flex-col items-center rounded-lg relative"
  >
    <section class="upsection w-1/2 h-28 rounded-lg"></section>
    <div
      class="profile-image w-32 h-32 bg-red-300 absolute left-10 top-10  rounded-lg "
    >
      <img
        src="<%=user.profileImage%>"
        alt=""
        class="object-cover object-fit rounded-lg w-32 h-32"
      />
    </div>
    <!-- //form -->
    <!-- <form action="/users/image" method="post" enctype="multipart/form-data" >
      <input type="file" name="image" id="">
      <input type="submit" name="" id="">
    </form> -->
    <section class="downsection w-full mt-8 flex justify-between">
      <div class="left w-1/3 h-32 text-white p-4">
        <h1 class="text-xl font-semibo5">Name:<%=user.fullname%></h1>
        <h1 class="text-xl font-regular">Username: <%=user.username%></h1>
        <a href="/deleteuser/<%=user._id%>"
          ><button class="px-4 py-1 bg-red-400 rounded-lg mt-5">
            Delete
          </button></a
        >
        <a href="/updateprofile/<%=user._id%>"
          ><button class="px-4 py-1 bg-grey-500 rounded-lg mt-5 ml-2 border">
            Update
          </button></a
        >
      </div>
      <div class="right w-1/2 h-32 text-white">
        <h1 class="text-xl font-semibold mt-4">Username:<%=user.email%></h1>
        <h1 class="text-xl font-regular ">Email:<%=user.username%></h1>
        <section class="mt-6 ">
          <a href="/resetPassword"
          ><button class="px-4 py-1 rounded-lg border">
            Reset password
          </button></a
        >
        <a href="/createpost"
          ><button class="px-4 py-1 rounded-lg border">
            Create
          </button></a
        >
        <a href="/users/logout" class="px-4 py-1 bg-red-400 rounded-lg "
          >Logout</a
        >
        </section>
      </div>
    </section>
  </div>
  <!-- //all posts are here! -->
  <div
    class="posts w-full bg-white py-3 flex flex-wrap justify-center gap-10"
  >
    <% allPosts.forEach((post,i)=>{%>
    <div
      class="posts w-56 h-80 bg-white py-3 flex flex-col justify-between shrink-0"
    >
      <section class="w-full h-52">
        <img src="<%=post.image%>" alt="" class="object-cover w-full h-full rounded-sm mb-1"  />
      </section>
      <p class="overflow-auto p-1"><%=post.description%>.....</p>
      <section class="flex justify-between px-1">
        <a href="/exploreBlog/<%=post._id%>">
          <button class="px-3 py-1 bg-black text-white rounded-md p-1">explore more</button>
        </a>
        <a href="/post/deleteBlog/<%=post._id%>">
          <button class="px-4 py-1 bg-red-400 rounded-md p-1 ">Delete</button>
        </a>
      </section>
    </div>

    <%})%>
  </div>
</div>
<%- include('./partials/footer') %>
